<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fortune_text"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_above="@+id/horizontal_scroll_view" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="@dimen/normal_padding"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_whatsapp"
                android:src="@drawable/ic_whatsapp_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_facebook"
                android:src="@drawable/ic_facebook_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_facebook_messenger"
                android:src="@drawable/ic_facebook_messenger_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_hangouts"
                android:src="@drawable/ic_hangouts_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_google_plus"
                android:src="@drawable/ic_google_plus_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_twitter"
                android:src="@drawable/ic_twitter_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_linkedin"
                android:src="@drawable/ic_linkedin_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_viber"
                android:src="@drawable/ic_viber_bg"
                style="@style/ShareButtonStyle" />

            <ImageView
                android:id="@+id/btn_wechat"
                android:src="@drawable/ic_wechat_bg"
                style="@style/ShareButtonStyle" />

        </LinearLayout>
    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>
